<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.View.MainPage"
             xmlns:model="clr-namespace:MusicApp.Model"
             Title="MainPage">


    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Margin="30">

            <Label
                Text="Pick a genre"
                HorizontalOptions="Center"
            />
            <Button
                x:Name="HipHopBtn"
                Text="HipHop"
                Clicked="OnAboutClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="PopBtn"
                Text="Pop"
                Clicked="OnAboutClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="MetalBtn"
                Text="Metal"
                Clicked="OnAboutClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="RockBtn"
                Text="Rock"
                Clicked="OnAboutClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>


</ContentPage>